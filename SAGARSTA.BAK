#include<iostream.h>
#include<conio.h>
class star
{
	int a,i,j;
	public:
	void input()
	{
	cout<<"enter no. of rows= ";
	cin>>a;
	}
	//right
	void right()
	{
		for(i=1;i<=a;i++)
		{
			cout<<"\n";
			for(j=1;j<=i;j++)
			{
				cout<<"*";
			}
		}
	}

	//down
	void down()
	{
		for(i=a;i>=1;i--)
		{
			cout<<"\n";
			for(j=i;j>1;j--)
			{
				cout<<"*";
			}
		}
	}


};
void main()
{
clrscr();
star s;
s.input();
s.right();
s.down();
getch();
}

